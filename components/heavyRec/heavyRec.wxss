/* components/heavyRec/heavyRec.wxss */
@import '/miniprogram_npm/@vant/weapp/common/index.wxss';
.heavyRec-view{
  padding: 30rpx 0 30rpx 0;
}
.title{
  width: 100%;
  margin-bottom: 32rpx;
  position: relative;
}
.title .titleText{
  font-size: 40rpx;
  font-weight: bold;
}
.title .more{
  width: 52rpx;
  height: 56rpx;
  float: right;
  padding: 0 34rpx;
  font-size: 26rpx;
  color: #999999;
  line-height: 56rpx;
  border: 1px solid #f0f0f0;
  border-radius: 56rpx;
}
.heavy-container{
  height: 440rpx;
  display: flex;
  justify-content: space-between;
}
.heavy-container .heavy-item{
  width: 187.7rpx;
}
.next-container{
  padding-bottom: 16rpx;
}
.next-item{
  display: flex;
  justify-content: flex-start;
  height: 230rpx;
  width: 100%;
  margin-bottom: 40rpx;
}
.next-img{
  height: 100%;
  width: 164rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}
.next-info{
  width: 476.4rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}
.next-title{
  width: 100%;
  font-size: 34rpx;
  color: #222222;
  margin-bottom: 14rpx;
}
.next-author{
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 18rpx;
}
.next-intro{
  font-size: 24rpx;
  color: #999999;
}
.img{
  width: 100%;
  height: 262.76rpx;
  border-radius: 15rpx;
}
.book-name{
  margin: 16rpx 0 10rpx 0;
  width: 186rpx;
  height: 76rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.book-auth{
  font-size: 24rpx;
  color: #888888;
}