/* components/recommend/recommend.wxss */
@import '/miniprogram_npm/@vant/weapp/common/index.wxss';
.title{
  width: 100%;
  margin-bottom: 32rpx;
  position: relative;
}
.title .titleText{
  font-size: 40rpx;
  font-weight: bold;
}
.title .more{
  width: 52rpx;
  height: 56rpx;
  float: right;
  padding: 0 34rpx;
  font-size: 26rpx;
  color: #999999;
  line-height: 56rpx;
  border: 1px solid #f0f0f0;
  border-radius: 56rpx;
}
.next-container{
  padding-bottom: 16rpx;
  margin-top: 16rpx;
}
.next-item{
  display: flex;
  justify-content: flex-start;
  height: 230rpx;
  width: 100%;
  margin-bottom: 40rpx;
}
.next-img{
  height: 100%;
  width: 164rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}
.next-info{
  width: 476.4rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}
.next-title{
  width: 100%;
  font-size: 34rpx;
  color: #222222;
  margin-bottom: 14rpx;
}
.next-author{
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 18rpx;
}
.next-intro{
  font-size: 24rpx;
  color: #999999;
}