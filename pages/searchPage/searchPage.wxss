.searchPage {
  padding-top: 10rpx;

}

.search-bookele {
  width: 100%;
  height: 256rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.bookcover {
  width: 150rpx;
  height: 210rpx;
  margin-right: 40rpx;
  float: left;
}

.book-title {
  font-size: 32rpx;
  line-height: 36rpx;
  height: 36rpx;
  overflow: hidden;
  word-break: break-all;
  font-weight: normal;
  color: #6c6358;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-bottom: 12rpx;
}

.author {
  color: #aba59a;
  line-height: 32rpx;
  height: 32rpx;
  overflow: hidden;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.content {
  padding-top: 8rpx;
  height: 104rpx;
  line-height: 38rpx;
  color: #807a73;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}